<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@mipmap/zx_bg"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/image_return"
            android:background="@mipmap/icon_return"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/space_20"
            android:layout_marginStart="@dimen/space_20"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/image_avatar"
            android:background="@mipmap/ic_launcher_round"
            android:layout_width="71dp"
            android:layout_marginTop="@dimen/space_20"
            android:layout_marginStart="@dimen/space_20"
            app:layout_constraintTop_toBottomOf="@+id/image_return"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="71dp"/>

    <TextView
            android:id="@+id/tv_user_name"
            app:layout_constraintTop_toBottomOf="@+id/image_return"
            android:layout_marginTop="@dimen/space_30"
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/image_return"
            android:layout_marginStart="@dimen/space_69"
            android:textSize="@dimen/text_22"
            android:textColor="@color/white"
            android:text="@string/app_name"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_user_phone"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_name"
            android:layout_marginTop="@dimen/space_5"
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/tv_user_name"
            android:textSize="@dimen/text_16"
            android:textColor="@color/white"
            android:text="@string/app_name"
            android:layout_height="wrap_content"/>

    <ImageView
            android:background="@mipmap/uesrback_card"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_phone"
            android:layout_marginTop="@dimen/space_50"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/image_change_pass"
            android:background="@mipmap/icon_password"
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/image_login_out"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_phone"
            android:layout_marginTop="@dimen/space_69"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_chang_pass"
            app:layout_constraintTop_toBottomOf="@+id/image_change_pass"
            android:layout_marginTop="@dimen/space_5"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_18"
            android:textColor="@color/user_change_pass"
            android:text="@string/change_pass"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_login_out"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/image_login_out"
            android:background="@mipmap/icon_out"
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/image_change_pass"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/image_change_pass"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_login_out"
            app:layout_constraintTop_toBottomOf="@+id/image_change_pass"
            android:layout_marginTop="@dimen/space_5"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_18"
            android:textColor="@color/user_change_pass"
            app:layout_constraintLeft_toRightOf="@+id/tv_chang_pass"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/login_out"
            android:layout_height="wrap_content"/>


</android.support.constraint.ConstraintLayout>