<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/tv_product_batch"
            android:text="生产批次号："
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/space_10"
            android:layout_height="wrap_content"/>


    <TextView
            android:id="@+id/tv_product"
            android:text="产品："
            android:layout_margin="@dimen/space_10"
            app:layout_constraintTop_toBottomOf="@+id/tv_product_batch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <TextView
            android:id="@+id/tv_number"
            android:text="数量："
            android:layout_margin="@dimen/space_10"
            app:layout_constraintTop_toBottomOf="@+id/tv_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_code_detail"
            android:text="码明细："
            android:layout_margin="@dimen/space_10"
            app:layout_constraintTop_toBottomOf="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:id="@+id/tv_housing"
              android:text="仓库："
              android:layout_margin="@dimen/space_10"
              app:layout_constraintTop_toBottomOf="@+id/tv_code_detail"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:id="@+id/tv_select_housing"
              android:text="仓库 1"
              app:layout_constraintStart_toEndOf="@+id/tv_housing"
              app:layout_constraintBottom_toBottomOf="@+id/tv_housing"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:id="@+id/tv_position"
              android:text="库位："
              android:layout_margin="@dimen/space_10"
              app:layout_constraintTop_toBottomOf="@+id/tv_housing"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:id="@+id/tv_select_position"
              android:text="库位 1"
              app:layout_constraintStart_toEndOf="@+id/tv_position"
              app:layout_constraintBottom_toBottomOf="@+id/tv_position"
              android:layout_height="wrap_content"/>

    <Button android:layout_width="wrap_content"
            android:id="@+id/bt_confirm"
            app:layout_constraintTop_toBottomOf="@+id/tv_position"
            android:text="确认"
            android:layout_height="wrap_content"/>


</android.support.constraint.ConstraintLayout>