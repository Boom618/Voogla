<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@mipmap/index_bg"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/tv_ch"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/space_50"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_28"
            android:text="@string/welcome_ch"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_en"
            app:layout_constraintTop_toBottomOf="@+id/tv_ch"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_16"
            android:textColor="@color/white"
            android:text="@string/welcome_en"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/iv_jc"
            android:background="@mipmap/jc_card"
            android:layout_marginTop="@dimen/space_41"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_en"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/iv_user"
            android:background="@mipmap/user_card"
            android:layout_marginTop="@dimen/space_20"
            app:layout_constraintTop_toBottomOf="@+id/iv_jc"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


</android.support.constraint.ConstraintLayout>