<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/space_10"
        android:background="@color/white"
        android:layout_marginStart="@dimen/space_6"
        android:layout_marginEnd="@dimen/space_6"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/tv_number"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/space_10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/space_15"
            android:text="1756838695678908765"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_16"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_state_type"
            android:background="@drawable/button_color"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/look_detail"
            android:paddingStart="@dimen/x20"
            android:paddingEnd="@dimen/x20"
            android:paddingTop="@dimen/x6"
            android:paddingBottom="@dimen/x6"
            android:layout_marginEnd="@dimen/space_10"
            android:layout_marginTop="@dimen/x12"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/theme_color"
            android:layout_height="wrap_content"/>

    <View
            android:id="@+id/view_line1"
            app:layout_constraintTop_toBottomOf="@+id/tv_number"
            android:layout_width="match_parent"
            style="@style/lineView"/>

    <TextView
            app:layout_constraintTop_toBottomOf="@+id/view_line1"
            android:layout_marginTop="@dimen/space_10"
            app:layout_constraintStart_toStartOf="@+id/tv_number"
            android:text="@string/send_out_date"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_14"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_send_out_date"
            app:layout_constraintTop_toBottomOf="@+id/view_line1"
            android:layout_marginTop="@dimen/space_10"
            app:layout_constraintEnd_toEndOf="@id/tv_state_type"
            android:text="2019年1月16日"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_14"
            android:layout_height="wrap_content"/>

    <View
            android:id="@+id/view_line2"
            app:layout_constraintTop_toBottomOf="@+id/tv_send_out_date"
            android:layout_width="match_parent"
            style="@style/lineView"/>

    <TextView
            app:layout_constraintTop_toBottomOf="@+id/view_line2"
            android:layout_marginTop="@dimen/space_10"
            app:layout_constraintStart_toStartOf="@+id/tv_number"
            android:text="@string/send_address"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_14"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_send_out_address"
            app:layout_constraintTop_toBottomOf="@+id/view_line2"
            android:layout_marginTop="@dimen/space_10"
            app:layout_constraintEnd_toEndOf="@id/tv_state_type"
            android:text="上海市静安区 581 号"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_14"
            android:layout_height="wrap_content"/>

    <View
            android:id="@+id/view_line3"
            app:layout_constraintTop_toBottomOf="@+id/tv_send_out_address"
            android:layout_width="match_parent"
            style="@style/lineView"/>

    <TextView
            app:layout_constraintTop_toBottomOf="@+id/view_line3"
            android:layout_marginTop="@dimen/space_10"
            app:layout_constraintStart_toStartOf="@+id/tv_number"
            android:text="@string/send_out_state"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_14"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_send_out_state"
            app:layout_constraintTop_toBottomOf="@+id/view_line3"
            android:layout_marginTop="@dimen/space_10"
            app:layout_constraintEnd_toEndOf="@id/tv_state_type"
            android:text="待发货"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_14"
            android:paddingBottom="@dimen/x10"
            android:layout_height="wrap_content"/>



</android.support.constraint.ConstraintLayout>