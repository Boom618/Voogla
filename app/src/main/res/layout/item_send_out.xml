<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@drawable/shape_white_min_radius"
        android:layout_marginStart="@dimen/space_6"
        android:layout_marginEnd="@dimen/space_6"
        android:paddingBottom="@dimen/space_6"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/tv_receiver_name"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/space_10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/space_15"
            tools:text="收货人"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_16"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_state_type"
            android:background="@drawable/button_color"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/look_detail"
            android:paddingStart="@dimen/x20"
            android:paddingEnd="@dimen/x20"
            android:paddingTop="@dimen/x6"
            android:paddingBottom="@dimen/x6"
            android:layout_marginEnd="@dimen/space_10"
            android:layout_marginTop="@dimen/x12"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/theme_color"
            android:layout_height="wrap_content"/>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/layout"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/tv_receiver_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <View
                android:id="@+id/view_line1"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                style="@style/lineView"/>

        <TextView
                app:layout_constraintTop_toBottomOf="@+id/view_line1"
                android:layout_marginTop="@dimen/space_10"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/space_15"
                android:text="@string/send_out_date"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_14"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_send_out_date"
                app:layout_constraintTop_toBottomOf="@+id/view_line1"
                android:layout_marginTop="@dimen/space_10"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/space_10"
                tools:text="2019年1月16日"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_14"
                android:layout_height="wrap_content"/>

        <View
                android:id="@+id/view_line2"
                app:layout_constraintTop_toBottomOf="@+id/tv_send_out_date"
                android:layout_width="match_parent"
                style="@style/lineView"/>

        <TextView
                app:layout_constraintTop_toBottomOf="@+id/view_line2"
                android:layout_marginTop="@dimen/space_10"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/space_15"
                android:text="@string/receipt_address"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_14"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_send_out_address"
                app:layout_constraintTop_toBottomOf="@+id/view_line2"
                android:layout_marginTop="@dimen/space_10"
                app:layout_constraintEnd_toEndOf="@id/tv_send_out_date"
                tools:text="上海市静安区 581 号"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_14"
                android:layout_height="wrap_content"/>

        <View
                android:id="@+id/view_line3"
                app:layout_constraintTop_toBottomOf="@+id/tv_send_out_address"
                android:layout_width="match_parent"
                style="@style/lineView"/>

        <TextView
                app:layout_constraintTop_toBottomOf="@+id/view_line3"
                android:layout_marginTop="@dimen/space_10"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/space_15"
                android:text="负责人"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_14"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_responsible"
                app:layout_constraintTop_toBottomOf="@+id/view_line3"
                android:layout_marginTop="@dimen/space_10"
                app:layout_constraintEnd_toEndOf="@id/tv_send_out_date"
                tools:text="负责人"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_14"
                android:paddingBottom="@dimen/x10"
                android:layout_height="wrap_content"/>

        <View
                android:id="@+id/view_line5"
                app:layout_constraintTop_toBottomOf="@+id/tv_responsible"
                android:layout_width="match_parent"
                style="@style/lineView"/>

        <TextView
                app:layout_constraintTop_toBottomOf="@+id/view_line5"
                android:layout_marginTop="@dimen/space_10"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/space_15"
                android:text="商品名称"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_14"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_goods_name"
                app:layout_constraintTop_toBottomOf="@+id/view_line5"
                android:layout_marginTop="@dimen/space_10"
                app:layout_constraintEnd_toEndOf="@id/tv_send_out_date"
                tools:text="商品名称"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_14"
                android:paddingBottom="@dimen/x10"
                android:layout_height="wrap_content"/>

        <View
                android:id="@+id/view_line6"
                app:layout_constraintTop_toBottomOf="@+id/tv_goods_name"
                android:layout_width="match_parent"
                style="@style/lineView"/>

        <TextView
                app:layout_constraintTop_toBottomOf="@+id/view_line6"
                android:layout_marginTop="@dimen/space_10"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/space_15"
                android:text="待发整箱数"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_14"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_goods_number"
                app:layout_constraintTop_toBottomOf="@+id/view_line6"
                android:layout_marginTop="@dimen/space_10"
                app:layout_constraintEnd_toEndOf="@id/tv_send_out_date"
                tools:text="0 箱"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_14"
                android:paddingBottom="@dimen/x10"
                android:layout_height="wrap_content"/>

        <View
                android:id="@+id/view_line7"
                app:layout_constraintTop_toBottomOf="@+id/tv_goods_number"
                android:layout_width="match_parent"
                style="@style/lineView"/>

        <TextView
                app:layout_constraintTop_toBottomOf="@+id/view_line7"
                android:layout_marginTop="@dimen/space_10"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/space_15"
                android:text="待发散货数"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_14"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_unit_number"
                app:layout_constraintTop_toBottomOf="@+id/view_line7"
                android:layout_marginTop="@dimen/space_10"
                app:layout_constraintEnd_toEndOf="@id/tv_send_out_date"
                android:text="0 个"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_14"
                android:paddingBottom="@dimen/x10"
                android:layout_height="wrap_content"/>

        <View
                android:id="@+id/view_line8"
                app:layout_constraintTop_toBottomOf="@+id/tv_unit_number"
                android:layout_width="match_parent"
                style="@style/lineView"/>

        <TextView
                app:layout_constraintTop_toBottomOf="@+id/view_line8"
                android:layout_marginTop="@dimen/space_10"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/space_15"
                android:text="生产批次号"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_14"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_bat_no"
                app:layout_constraintTop_toBottomOf="@+id/view_line8"
                android:layout_marginTop="@dimen/space_10"
                app:layout_constraintEnd_toEndOf="@id/tv_send_out_date"
                tools:text="SP12563"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_14"
                android:paddingBottom="@dimen/x10"
                android:layout_height="wrap_content"/>

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>