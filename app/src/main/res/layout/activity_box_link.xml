<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include
            android:id="@+id/top"
            layout="@layout/top_layout"/>

    <EditText
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/search_input"
            android:paddingStart="@dimen/x66"
            android:layout_marginTop="@dimen/space_6"
            app:layout_constraintTop_toBottomOf="@+id/top"
            android:layout_marginStart="@dimen/space_20"
            android:layout_marginEnd="@dimen/space_20"
            android:hint="@string/search"
            android:imeOptions="actionSearch"
            android:singleLine="true"/>

    <TextView
            android:id="@+id/tv_batch"
            android:text="生产批次："
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/top"
            android:layout_width="wrap_content"
            style="@style/itemSizeStyle"
            app:layout_constraintEnd_toStartOf="@+id/tv_select_batch"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_select_batch"
            android:text="批次号一"
            app:layout_constraintStart_toEndOf="@+id/tv_batch"
            app:layout_constraintBottom_toBottomOf="@+id/tv_batch"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_product"
            android:text="选择产品："
            app:layout_constraintTop_toBottomOf="@+id/tv_batch"
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            style="@style/itemSizeStyle"
            app:layout_constraintLeft_toLeftOf="@+id/tv_batch"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_select_product"
            android:text="面膜 1"
            app:layout_constraintLeft_toLeftOf="@+id/tv_select_batch"
            app:layout_constraintBottom_toBottomOf="@+id/tv_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_format"
            android:text="选择规格："
            app:layout_constraintTop_toBottomOf="@+id/tv_product"
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            style="@style/itemSizeStyle"
            app:layout_constraintLeft_toLeftOf="@+id/tv_batch"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_select_format"
            android:text="5盒/箱"
            app:layout_constraintLeft_toLeftOf="@+id/tv_select_batch"
            app:layout_constraintBottom_toBottomOf="@+id/tv_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button android:layout_width="wrap_content"
            android:id="@+id/bt_start"
            android:text="开始"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_select_format"
            android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>