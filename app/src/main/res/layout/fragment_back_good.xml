<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
            android:id="@+id/goods_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/shape_white_max_radius"
            android:layout_marginTop="@dimen/space_6"
            android:layout_marginBottom="@dimen/space_6"
            android:layout_marginStart="@dimen/space_20"
            android:layout_marginEnd="@dimen/text_20"
            android:hint="@string/input_product_number"
            android:textColorHint="@color/text_color"
            android:imeOptions="actionSearch"
            android:singleLine="true"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_back_goods"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginBottom="@dimen/x16"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/goods_search"
            app:layout_constraintVertical_weight="1"
            android:layout_height="0dp"/>


</android.support.constraint.ConstraintLayout>