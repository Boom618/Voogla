<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView android:layout_width="wrap_content"
              android:id="@+id/tv_box"
              android:text="箱码："
              style="@style/itemSizeBox"
              android:layout_margin="@dimen/space_10"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:id="@+id/tv_box_code"
              android:text="0001"
              style="@style/itemSizeBox"
              app:layout_constraintStart_toEndOf="@+id/tv_box"
              app:layout_constraintBottom_toBottomOf="@+id/tv_box"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:id="@+id/tv_product"
              android:text="产品码："
              style="@style/itemSizeBox"
              app:layout_constraintTop_toBottomOf="@+id/tv_box"
              app:layout_constraintStart_toStartOf="@+id/tv_box"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:id="@+id/tv_product_code"
              android:text="0002"
              style="@style/itemSizeBox"
              app:layout_constraintStart_toEndOf="@+id/tv_product"
              app:layout_constraintBottom_toBottomOf="@+id/tv_product"
              android:layout_height="wrap_content"/>

    <Button android:layout_width="wrap_content"
            android:id="@+id/bt_complete"
            android:text="完成"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_product"
            android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>