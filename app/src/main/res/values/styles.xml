<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- TooBar 颜色-->
        <item name="colorPrimary">@color/white</item>
        <!-- 状态栏 颜色-->
        <item name="colorPrimaryDark">@color/theme_color</item>
        <!-- 焦点颜色 颜色-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>




    <!-- 删除 item dialog  start  -->

    <style name="NormalDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/normalDialogAnim</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="normalDialogAnim" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/normal_dialog_enter
        </item>
        <item name="@android:windowExitAnimation">@anim/normal_dialog_exit
        </item>
    </style>


    <!-- 删除 item dialog   end -->

    <!-- 供应商 选择  start -->

    <style name="bottomDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/bottomDialogAnim</item>
    </style>

    <style name="bottomDialogAnim" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/bottom_dialog_enter
        </item>
        <item name="@android:windowExitAnimation">@anim/bottom_dialog_exit
        </item>
    </style>
    <!-- 供应商 选择  end -->


    <!-- 列表详情字体大小  start -->

    <style name="itemSizeStyle">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/txt_main_color</item>
    </style>

    <!--生产入库 -->
    <style name="itemProductStyle">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/txt_product_color</item>
    </style>

    <!-- 箱码  start -->
    <style name="itemSizeBox">
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textColor">@color/txt_main_color</item>
    </style>

    <!-- Line view -->

    <style name="lineView">
        <item name="android:background">@color/view_line</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginStart">@dimen/space_10</item>
        <item name="android:layout_marginEnd">@dimen/space_10</item>
        <item name="android:layout_marginTop">@dimen/space_10</item>
    </style>
</resources>
