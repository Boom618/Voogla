<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- TooBar 颜色-->
        <item name="colorPrimary">@color/white</item>
        <!-- 状态栏 颜色-->
        <item name="colorPrimaryDark">@color/theme_color</item>
        <!-- 焦点颜色 颜色-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- 删除 item dialog  start  -->

    <style name="NormalDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--<item name="android:windowAnimationStyle">@style/normalDialogAnim</item>-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--<style name="normalDialogAnim" parent="android:Animation">-->
        <!--<item name="@android:windowEnterAnimation">@anim/normal_dialog_enter-->
        <!--</item>-->
        <!--<item name="@android:windowExitAnimation">@anim/normal_dialog_exit-->
        <!--</item>-->
    <!--</style>-->

    <!--启动背景  防止启动白屏或黑屏（取决于主题是 Dark 还是 Light）情况-->
    <style name="AppThemeLauncher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@mipmap/log_bg</item>
    </style>

    <!-- 删除 item dialog   end -->

    <!-- 供应商 选择  start -->

    <style name="bottomDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--<item name="android:windowAnimationStyle">@style/bottomDialogAnim</item>-->
    </style>

    <!--<style name="bottomDialogAnim" parent="android:Animation">-->
        <!--<item name="@android:windowEnterAnimation">@anim/bottom_dialog_enter-->
        <!--</item>-->
        <!--<item name="@android:windowExitAnimation">@anim/bottom_dialog_exit-->
        <!--</item>-->
    <!--</style>-->

    <!-- Switch 控件颜色 -->
    <style name="SwitchTheme" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/switch_text_selector</item>
    </style>

    <!-- 列表详情字体大小  start -->

    <style name="itemSizeStyle">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/txt_main_color</item>
    </style>

    <!--生产入库 -->
    <style name="itemProductStyle">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/txt_product_color</item>
    </style>

    <!-- 箱码  start -->
    <style name="itemSizeBox">
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textColor">@color/txt_main_color</item>
    </style>

    <!-- Line view -->

    <style name="lineView">
        <item name="android:background">@color/view_line</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginStart">@dimen/space_10</item>
        <item name="android:layout_marginEnd">@dimen/space_10</item>
        <item name="android:layout_marginTop">@dimen/space_10</item>
    </style>

    <!-- Line view Look -->

    <style name="lineViewLook">
        <item name="android:background">@color/view_line</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginStart">@dimen/space_10</item>
        <item name="android:layout_marginEnd">@dimen/space_10</item>
    </style>

    <!-- Look product into -->
    <!-- <item name="android:textColor">@color/txt_product_color</item> -->
    <style name="LookProductText">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:layout_marginTop">@dimen/x16</item>
        <item name="android:layout_marginStart">@dimen/x28</item>
        <item name="android:layout_marginEnd">@dimen/x28</item>
    </style>


    <!-- TextView 替换 ImageView 样式-->
    <style name="Text2ImageView">
        <item name="android:background">@drawable/button_color</item>
        <item name="android:textColor">@color/theme_color</item>
        <item name="android:padding">@dimen/x6</item>
        <item name="android:paddingStart">@dimen/x20</item>
        <item name="android:paddingEnd">@dimen/x20</item>
    </style>

    <!-- Toolbar Style -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="Toolbar_TextAppearance_White">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
